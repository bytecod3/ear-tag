<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title %></title>

<!-- Mapbox GL (optional) -->
<% if (mapboxAccessToken) { %>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.js"></script>
<% } %>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .map-container {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    #map {
        height: 600px;
        width: 70%;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    #info-panel {
        width: 30%;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background: #f9f9f9;
    }

    .controls {
        margin-bottom: 20px;
    }

    .btn {
        padding: 8px 16px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn:hover {
        background: #0056b3;
    }

    .center-marker {
            background: #fbf719;
            border-radius: 50%;
            width: 15px;
            height: 15px;
       }

/*      safe */
    .device-marker-safe {
        background: #4CAF50;
        border-radius: 50%;
        width: 15px;
        height: 15px;
    }

/*      warning */
    .device-marker-warning {
        background: #FFC107;
        border-radius: 50%;
        width: 15px;
        height: 15px;
    }

/*     // critical */
    .device-marker-critical {
        background: #F44336;
        border-radius: 50%;
        width: 15px;
        height: 15px;
    }

</style>